{
  "manifest_version": 3,
  "name": "ABUGO Intercom actions",
  "version": "1.0.5",
  "description": "Adds an Actions section to Intercom Knowledge Hub sidebar",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://app.intercom.com/*",
    "https://abugo.app.n8n.cloud/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://app.intercom.com/a/apps/*/knowledge-hub/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

